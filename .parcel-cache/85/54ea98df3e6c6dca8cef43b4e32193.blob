@keyframes colorainbow2 {
  0% { color: #dc143c;}
  50% { color: #12cff3; }
  100% { color: #3CD814 }
}

h2 a.brand {
  animation-name: colorainbow2;
  animation-delay: 0.7ms;
  animation-duration: 20s;
  animation-iteration-count: infinite;
}

h4 {
  color: crimson;
  font-size: 17px;
  text-transform: lowercase;
  margin-top: 16px;
  font-weight: 600;
}

.row#cardgrid {
  display: flex;
}

.col-md-3 {
  margin-bottom: 40px;
}

.album-poster {
  position: relative;
  display: block;
  width: 200px;
  height: 200px;
  min-width: 200px;
  min-height: 200px;
  border-radius: 7px;
  overflow: hidden;
  box-shadow: 0 0 20px rgba(235, 99, 189, 0.3);
  transition: all ease .4s;
}

.album-poster:hover {
  box-shadow: none;
  transform: scale(0.89) translateY(5px);
}

img {
  justify-content: center;
  max-width: 250px;
  max-height: 250px;
  min-width: 200px;
  min-height: 200px;
  border-radius: 7px;
  transform: translateZ(20px);
}

h3 {
  font-size: 24px;
  margin-bottom: 24px;
  border-bottom: .4px;
  padding-bottom: 15px;
  color: #12CFF3;
}

h3.construction {
  color: #12CFF3;
}

h3#the-hits {
  color: floralwhite;
}

@keyframes wobniaroloc {
  0% {color: white; }
  100% { color: #12CFF3; }
}

