.main
  padding 40px 0

h1
  margin-left: 15px

img
  {imgijizz}

.col-md-3
  margin-bottom 40px
  .album-poster
    {poster}

h3
  font-size 24px
  margin-bottom 24px
  border-bottom 0.4px
  padding-bottom 15px
  color pink

h4
  font-size 17px
  text-transform lowercase 
  margin-top 16px
  font-weight 600

