// BLOCKS
poster =
    position relative
    display block
    width 250px
    height 250px
    border-radius 7px
    overflow hidden
    box-shadow 0 0 20px rgba(235,99,189,0.3)
    transition all ease 0.4s
    &:hover
      opacity 0.4

